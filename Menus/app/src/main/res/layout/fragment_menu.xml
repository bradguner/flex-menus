<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flex.menus.MenuFragment"
    android:background="@android:color/transparent"
    android:tag="FilterMenuFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/imageView"
        android:background="@drawable/menus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ImageView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterNormal"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_normal"
        android:onClick="changeBgNormal"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterVintage"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_vintage"
        android:onClick="changeBgVintage"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterBlackWhite"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="122dp"
        android:background="@drawable/button_blackwhite"
        android:onClick="changeBgBlackWhite"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterHarsh"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="122dp"
        android:background="@drawable/button_harsh"
        android:onClick="changeBgHarsh"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filterSepia"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/button_sepia"
        android:onClick="changeBgSepia"/>

</FrameLayout>
